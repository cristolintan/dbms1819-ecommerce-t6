<div class="container">
  <div class="row"> 
    <div class="responsive">
      <div class="container col-lg-12">   
        <table class="brand_list" align="center">
        <h1 class="text-center" style="margin-bottom:25pt">Customer Details:</h1>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
                <th>Street</th>
              <th>Municipality</th>
              <th>Province</th>
              <th>Zip Code</th>
        </tr>
        <tr>
          <td>{{rows.0.first_name}}</td>
              <td>{{rows.0.last_name}}</td>
              <td>{{rows.0.customer_email}}</td>
              <td>{{rows.0.street}}</td>
              <td>{{rows.0.municipality}}</td>
              <td>{{rows.0.province}}</td>
              <td>{{rows.0.zipcode}}</td>
            </tr>
        </table>
       </div>
    </div>    

    <div class="row"> 
    <div class="responsive">
      <div class="container col-lg-12">   
        <table class="brand_list" align="center">
        <h1 class="text-center" style="margin-bottom:25pt">Order Details:</h1>
        <tr>
          <th>ORDERED PRODUCTS</th>
              <th>QUANTITY</th>
              <th>ORDER DATE</th>
        </tr>
         {{#each rows}}
           <tr>
               <td>{{this.product_name}}</td>
               <td>{{this.quantity}}</td>
              <td><script>moment(this.purchase_date).format('llll');</script></td>
            </tr>
           {{/each}}
        </table>
       </div>
    </div>    
  </div>
