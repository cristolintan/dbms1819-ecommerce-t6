<body>
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-sm-12 col-md-12 text-center" style="margin-top: 20pt">
				<h1><strong>{{title}}</strong></h1>
			</div>
		</div>

		<div class="row">			
			{{#each data}}		
			<div class="responsive">
				<div class="container col-lg-12 col-sm-12 col-md-12" style="width: 50%">
					<div class="w3-display-container w3-hover-opacity" >
						<div class="container_pic">
							<img style="width:100% " src="{{this.product_picture}}" alt="Product">
							<div class="w3-display-middle w3-display-hover w3-xlarge">
								<a href="/products/{{this.product_id}}"><button class="w3-button w3-green">Buy</button></a>
							</div>
							<div class="text">
								<h4>{{this.product_name}}</h4>
								<p>{{this.brand_name}}</p>
							 </div>
						 </div>
					</div>
				</div>
			</div>			
			{{/each}}			
		</div>
		<div class="form-group">
		<div class="text-center">
		<a href="/product/create"><button type="submit" style="margin-top: 10pt" class="btn btn-primary btn-lg" title="Submit">ADD Product</button></a>
		</div>
		</div>
	</div>
</body>